<% if signed_in? %>
  <table class="front" summary="for signed-in users">
    <tr>
      <td class="main">
         <h1 class="main">What's up?</h1>
         <%= render "shared/micropost_form" %>
         <%= render "shared/feed" %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
      </td>
    </tr>
  </table>
<% else %>

<h1>Sample App</h1>
<p>
This is the home page for <a href="http://rubyonrailstutorial.org">Ruby on Rails Tutorial Sample Application</a>
</p>

<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>

<% end %>
